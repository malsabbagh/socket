  "bugs": {
    "url": "https://github.com/malsabbagh/socket-demo/issues"
  },
  "homepage": "https://github.com/malsabbagh/socket-demo#readme",
  "dependencies": {
    "@types/express": "^4.17.13",
    "express": "^4.19.2",
    "path": "^0.12.7",
    "ws": "^8.5.0"
  },
  "devDependencies": {
    "@types/ws": "^8.5.3",
    "typescript": "^4.6.3"
  }
}
