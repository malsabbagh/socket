{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "outDir": "dist",
        "rootDir": "./src",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }