{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "outDir": "dist",
        "rootDir": "./src",
        "lib": ["es2016", "esnext", "dom"],
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "dist"]
  }